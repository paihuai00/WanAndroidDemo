<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--颜色#333，大小14sp-->
    <style name="TextStyle_333_14sp">
        <item name="android:textColor">@color/color_333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle_666_12sp">
        <item name="android:textColor">@color/color_666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle_1B8AD1_12sp">
        <item name="android:textColor">@color/color_1B8AD1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_circle_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
        <item name="android:background">@null</item>
    </style>


    <style name="style_circle_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_05</item>
        <item name="android:background">@color/color_cccccc</item>
    </style>

</resources>
