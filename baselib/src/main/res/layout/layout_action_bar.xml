<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#1B8AD1">

    <TextView
        android:id="@+id/xaction_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="6"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#222222"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#222222"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/xaction_bar_left_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@string/app_name"
        android:textColor="#222222"
        android:textSize="13sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/xaction_bar_left_one"
        android:background="@drawable/city_down_arrow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/xaction_bar_left_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/xaction_bar_left_one"
        android:layout_toRightOf="@+id/xaction_bar_left_one"
        android:contentDescription="@string/app_name"
        android:textColor="#222222"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/iv_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xaction_bar_right_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/app_name"
            android:textColor="#222222"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_ask"
        android:layout_toLeftOf="@+id/iv_ask"
        android:layout_toRightOf="@+id/xaction_bar_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xaction_bar_right_two_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <TextView
            android:id="@+id/xaction_bar_right_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/app_name"
            android:ellipsize="end"
            android:textColor="#222222"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dp_0_5"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="@color/colorGrayLight"></View>-->
</RelativeLayout>